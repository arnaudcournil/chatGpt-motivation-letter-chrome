{
    "manifest_version": 2,
    "name": "ChatGPT - Lettre de motivation",
    "description": "Try to generate a letter of motivation with ChatGPT",
    "version": "1.0",
    "permissions": [
     "*://*/*",
     "activeTab",
     "scripting"
    ],
    "browser_action": {
     "default_popup": "popup.html"
    },
    "content_scripts": [
        {
         "matches": ["https://chat.openai.com/*"],
         "js": ["monscript.js"]
        }
       ]
}
